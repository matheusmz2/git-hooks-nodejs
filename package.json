{
   
  "name": "git-hooks-nodejs",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint src/**",
    "lint-fix": "eslint src/** --fix",
    "success-message": "echo Thank for committing $GIT_AUTHOR_NAME"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@eslint/js": "^9.24.0",
    "@eslint/json": "^0.11.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^16.0.0",
    "husky": "^4.3.8",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.0",
    "pre-commit": "^1.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "post-commit": "npm run success-message"
      
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "jest --findRelatedTests"
    ]
  },
    
    "commitlint": {
      "rules": {
        "references-empty": [2, "never"]
      },
      "parserPreset": {
        "parserOpts": {
          "issuePrefixes": ["ISSUE-"]
        }
      }
    }
    
}
